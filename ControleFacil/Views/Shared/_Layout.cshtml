@{
    var layoutType = ViewData["LayoutType"]?.ToString() ?? "Default";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ControleFacil</title>
    <script type="importmap"></script>
    <link rel="shortcut icon" href="/img/0c0af84b-7080-43ca-979f-f11780a4ea53.png" type="image/x-icon" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ControleFacil.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    @if (layoutType == "A")
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm px-4">
                <div class="container-fluid d-flex justify-content-between align-items-center">
                    <a class="navbar-brand d-flex align-items-center gap-3" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="/img/0c0af84b-7080-43ca-979f-f11780a4ea53.png" class="logo" />
                        <h1 class="fs-3 mb-0 text-blue-control fw-semibold">Controle Fácil</h1>
                    </a>
                    <i class="bi bi-person-circle fs-2 text-blue-control"></i>
                </div>
            </nav>
        </header>
    }
    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>
    @if (layoutType == "A")
    {
        <footer class="text-muted bg-light d-flex align-items-center justify-content-center py-4 mt-5 shadow-sm">
            <span>&copy; 2025 - <strong>Controle Fácil</strong></span>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
